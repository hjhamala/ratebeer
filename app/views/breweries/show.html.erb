<p id="notice"><%= notice %></p>

<h2>
  <strong>Name:</strong>
  <%= @brewery.name %>
</h2>

<p>
  <i>
  <strong>Established year:</strong>
  <%= @brewery.year %>
  </i>
</p>

<p>Number of beers: <%= @brewery.beers.count %></p>


  <% @brewery.beers.each do |beer| %>
    <p>
      <%= link_to beer.name, beer %>
    </p>
  <% end %>

<% if @brewery.ratings.empty? %>
    Beers doesnt have any ratings.
<% else %>
    <p>Has <%=pluralize(@brewery.ratings.count, "rating")%>, average <%= @brewery.average_rating%></p>
<% end %>

<%= link_to 'Destroy', @brewery, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Edit', edit_brewery_path(@brewery) %> |

